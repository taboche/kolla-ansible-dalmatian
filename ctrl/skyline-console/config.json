{
    "command": "nginx",
    "config_files": [
        {
            "source": "/var/lib/kolla/config_files/skyline.yaml",
            "dest": "/etc/skyline/skyline.yaml",
            "owner": "skyline",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/nginx.conf",
            "dest": "/etc/nginx/nginx.conf",
            "owner": "skyline",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/skyline-cert.pem",
            "dest": "/etc/skyline/certs/skyline-cert.pem",
            "owner": "skyline",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/skyline-key.pem",
            "dest": "/etc/skyline/certs/skyline-key.pem",
            "owner": "skyline",
            "perm": "0600"
        }        ],
    "permissions": [
        {
            "path": "/var/log/kolla/skyline",
            "owner": "skyline:skyline",
            "recurse": true
        }
    ]
}
