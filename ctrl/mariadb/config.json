{
    "command": "/usr/bin/mysqld_safe",
    "config_files": [
        {
            "source": "/var/lib/kolla/config_files/galera.cnf",
            "dest": "/etc/mysql/my.cnf",
            "owner": "mysql",
            "perm": "0600"
        }
        ,
        {
            "source": "/var/lib/kolla/config_files/ca-certificates/root.crt",
            "dest": "/etc/mariadb/certs/root.crt",
            "owner": "mysql",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/mariadb-cert.pem",
            "dest": "/etc/mariadb/certs/mariadb-cert.pem",
            "owner": "mysql",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/mariadb-key.pem",
            "dest": "/etc/mariadb/certs/mariadb-key.pem",
            "owner": "mysql",
            "perm": "0600"
        }    ],
    "permissions": [
        {
            "path": "/var/log/kolla/mariadb",
            "owner": "mysql:mysql",
            "recurse": true
        },
        {
            "path": "/var/lib/mysql",
            "owner": "mysql:mysql",
            "recurse": true
        }
    ]
}
